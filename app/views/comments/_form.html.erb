<!DOCTYPE html>
<html>
<head>
<title></title>

</head>
<body>
<h3>Post a Comment</h3>
<%= form_for [@article, @comment] ,remote: true  do |f|%>
<p><% if author_signed_in? %>
<%= f.hidden_field :author_name, :value => current_author.username%>
    
   
    <%else%>
    <%= f.label :author_name, "Your Name" %><br/>
    <%= f.text_field :author_name %><%end%>
  </p>
  <p>
   
    <%= f.text_area :body, :required => true, :style =>"width: 80%;
    height: 100px;"%>
  </p>
  <p>
     <% if author_signed_in? %>
       <%= f.hidden_field :author_id, :value => current_author.id %>
     <% end%>

  </p>
  <p class="aaaa">
    <%= f.submit 'Submit', :style =>"padding: 10px 30px;" %>
  </p>
<% end %>
</body>
