<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
   <div class="modal-dialog" role="document">
      <div class="modal-content">
         <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">LOGIN</h4>
         </div>
         <div class="modal-body">
            <div class="clearfix"></div>
            <div id='social-icons-conatainer'>
               <div class='modal-body-left'>
               <h4 style="color: #d82039;
   
    margin-top: 0px;"> Welcome Back!</h4>
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="field" style="margin:21px 0px 15px">
                     <%= f.email_field :email, :autofocus => true, placeholder: ' abc@mail.com',:required => true %>
                  </div>
                  <div class="field" style="margin:0px 0px 15px">
                     <%= f.password_field :password, autocomplete: "off", placeholder: 'Password',:required => true %>
                  </div>
                  <% if devise_mapping.rememberable? -%>
                  <div class="field col-md-8 col-xs-12" style="padding-left:0px; font-size:12px;">
                     <%= f.check_box :remember_me %>
                     <%= f.label :remember_me %></div>
                  
               <div class="field col-md-8 col-xs-12" style="padding-left:0px; font-size:12px;">   
               <%= render 'devise/shared/link1'%>
            </div>
                  <div class="actions col-md-4" style="float:right; padding-left: 0px;
    padding-right: 0px;">
                  <button type="button" class="btn btn-default login col-xs-12" style="
                     margin-bottom: 15px; padding: 5px 18px;
                     border-radius: 0px; margin-top:10px;">
                  <%= f.submit "Log in"%></button>
               </div>
                  <% end %>
               </div>
               
               <div class='modal-body-right'>
               <h4 class="col-md-7 col-xs-12" style="color: #d82039;
    margin-left: 10px;
    margin-top: 0px;"> Social Signup</h4>
                  <div class="modal-social-icons col-md-12 col-xs-12">
                     <a href='' class="btn btn-default facebook"><i class="fa fa-facebook modal-icons"></i>  Facebook </a>
                     <a href='#' class="btn btn-default twitter"><i class="fa fa-twitter modal-icons"></i>  Twitter </a>
                     
                  </div>
               </div>
               
            </div>
            <div class="clearfix"></div>
             
            <div class="form-group modal-register-btn col-xs-6">
               <button class="btn btn-default"><a href="/authors/sign_out"> New User Please Register</a></button>
            </div>
         </div>
         <div class="clearfix"></div>
      </div>
      
         <% end %>
        
   </div>
</div>
